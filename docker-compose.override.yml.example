version: '3.8'

services:
  dev:
    # Changer le port si 3000 est déjà utilisé
    ports:
      - "3001:3000"  # Utilisez 3001 au lieu de 3000
    
    # Ajouter des variables d'environnement
    environment:
      - NODE_ENV=development
      - DEBUG=*
    
